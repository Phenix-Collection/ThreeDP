<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item >
                <shape>
                    <corners android:radius="8dp" />
                    <padding
                        android:bottom="2dp"
                        android:left="2dp"
                        android:right="2dp"
                        android:top="2dp" />
                    <solid android:color="#32FFD5"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <!-- 相当于padding -->
            <item >
                <shape>
                    <corners android:radius="8dp" />
                    <solid android:color="#FFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>