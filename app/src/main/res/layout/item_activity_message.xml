<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSlightGray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x4"
        android:layout_marginLeft="@dimen/x4"
        android:layout_marginRight="@dimen/x4"
        android:background="@drawable/r8_white_btn"
        android:padding="@dimen/x12">

        <ImageView
            android:id="@id/id_logo"
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/x36"
            android:src="@drawable/img_013" />

        <TextView
            android:id="@id/id_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x8"
            android:layout_toRightOf="@id/id_logo"
            android:text="海伦"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/x12" />

        <TextView
            android:id="@id/id_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_uname"
            android:layout_marginLeft="@dimen/x8"
            android:layout_toRightOf="@id/id_logo"
            android:text="请求加你为好友"
            android:textColor="@color/colorHintGray"
            android:textSize="@dimen/x10" />


        <TextView
            android:id="@id/id_ok"
            android:layout_width="@dimen/x41"
            android:layout_height="@dimen/x22"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x12"
            android:textColor="@color/colorGray"
            android:background="@drawable/r4_white_black_btn"
            android:text="同意" />
    </RelativeLayout>

</LinearLayout>
