<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.sdk.views.Menu.TopMenuView
        android:id="@id/id_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:centerText="@string/title_findpw"
        app:textColor="@color/colorGray"
        app:leftIcon="@drawable/icon_back" />

    <View
        android:background="@color/colorThinBlack"
        android:layout_width="match_parent"
        android:layout_below="@+id/id_menu"
        android:layout_height="0.5dp" />

    <RelativeLayout
        android:layout_width="@dimen/x240"
        android:layout_height="@dimen/x240"
        android:layout_below="@+id/id_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x80"
        android:background="@drawable/setpw_success">
        
        <ImageView
            android:id="@+id/img_findpw_success_close"
            android:layout_width="@dimen/x21"
            android:layout_height="@dimen/x21"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x9"
            android:layout_marginRight="@dimen/x9"
            android:background="@drawable/icon_x"/>

        <TextView
            android:id="@id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码设置成功"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x67"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/x16" />

        <TextView
            android:id="@+id/tv2"
            android:layout_below="@+id/tv1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回登陆"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/x16" />

        <TextView
            android:id="@+id/tv_findpw_success_go"
            android:layout_width="@dimen/x178"
            android:layout_height="@dimen/x34"
            android:layout_below="@+id/tv2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x30"
            android:background="@drawable/r8_deepskyblue_btn"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/x14" />

    </RelativeLayout>


</RelativeLayout>