<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x36"
        android:padding="@dimen/x22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxEms="4"
            android:text="请告诉我你的性别"
            android:textColor="@color/colorBlackLevel1"
            android:textSize="@dimen/x18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/x8"
            android:text="╳"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/x18"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x22"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/r60_white_btn"
            android:gravity="center"
            android:padding="@dimen/x12"
            android:text="男生"
            android:textColor="#191919"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/tv_femal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x14"
            android:layout_below="@id/tv_male"
            android:background="@drawable/r60_white_btn"
            android:gravity="center"
            android:padding="@dimen/x12"
            android:text="女生"
            android:textColor="#191919"
            android:textSize="@dimen/x14" />

    </RelativeLayout>

</RelativeLayout>