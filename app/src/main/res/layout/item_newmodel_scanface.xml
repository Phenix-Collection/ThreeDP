<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.sdk.views.Menu.TopMenuView
        android:id="@id/id_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:centerText="@string/title_scanface"
        app:textColor="@color/colorGray"
        app:leftIcon="@drawable/icon_back" />

    <View
        android:background="@color/colorThinBlack"
        android:layout_width="match_parent"
        android:layout_below="@+id/id_menu"
        android:layout_height="0.5dp" />

<!--    <com.tdp.main.views.ScanfaceProgressView
        android:id="@+id/progressView"
        android:layout_width="@dimen/x151"
        android:layout_height="@dimen/x151"
        android:layout_below="@id/id_menu"
        android:layout_marginTop="@dimen/x120"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_scanface_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressView"
        android:layout_marginTop="@dimen/x12"
        android:text="进度0%"
        android:textSize="@dimen/x13"
        android:layout_centerHorizontal="true"/>-->


    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="@dimen/x151"
        android:layout_height="@dimen/x151"
        android:layout_below="@id/id_menu"
        android:layout_marginTop="@dimen/x120"
        android:src="@drawable/scan_photo_loading_anim"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/scan_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_loading"
        android:layout_marginTop="@dimen/x12"
        android:text="扫描照片中，请稍候..."
        android:textSize="@dimen/x13"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>