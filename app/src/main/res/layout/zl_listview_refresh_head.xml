<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/x20"
        android:paddingTop="@dimen/x20">


        <TextView
            android:id="@+id/head_xw_ptr_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x20"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:text="@string/prompt_to_refresh"
            android:textColor="@color/colorPrimaryBlack"
            android:textSize="@dimen/x13" />

        <ProgressBar
            android:id="@+id/head_xw_ptr_progress_bar"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginRight="@dimen/x4"
            android:layout_toLeftOf="@id/head_xw_ptr_hint_text"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/zl_loading"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/head_xw_ptr_arrow_img"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:scaleType="centerCrop"
            android:layout_marginRight="@dimen/x4"
            android:layout_toLeftOf="@id/head_xw_ptr_hint_text"
            android:src="@drawable/icon_ok" />
    </RelativeLayout>
</RelativeLayout>