<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ra_white_btn"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="@dimen/x8" >

        <ImageView
            android:layout_width="@dimen/x78"
            android:layout_height="@dimen/x78"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_status_neterror" />

        <TextView
            android:id="@+id/item_status_nodata_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x22"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="@string/prompt_net_error"
            android:textColor="#858585"
            android:textSize="@dimen/x10" />

        <TextView
            android:id="@+id/item_status_neterror_retry_btn"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x29"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x12"
            android:background="@null"
            android:gravity="center"
            android:text="@string/action_click_screen_refresh"
            android:textColor="@color/colorPrimaryBlack"
            android:textSize="@dimen/x12" />
    </LinearLayout>

</RelativeLayout>