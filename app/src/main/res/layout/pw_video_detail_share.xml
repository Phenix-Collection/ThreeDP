<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhiteLevel2"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x102"
        android:layout_alignParentStart="true"
        android:id="@+id/hs"
        android:scrollbars="none"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_commmunity"
                android:layout_width="@dimen/x75"
                android:layout_height="match_parent"
                android:background="@drawable/ra_light_white_btn"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img8"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:background="@drawable/icon_community" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img8"
                    android:layout_marginTop="@dimen/x4"
                    android:text="社区"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/x12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_wechat_friend"
                android:layout_width="@dimen/x75"
                android:layout_height="match_parent"
                android:background="@drawable/ra_light_white_btn"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:background="@drawable/icon_wechat_friend" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img4"
                    android:layout_marginTop="@dimen/x4"
                    android:text="微信好友"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/x12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_wechat_friend_circle"
                android:layout_width="@dimen/x75"
                android:layout_height="match_parent"
                android:background="@drawable/ra_light_white_btn"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:background="@drawable/icon_wechat_friend_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img1"
                    android:layout_marginTop="@dimen/x4"
                    android:text="微信朋友圈"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/x12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_qq"
                android:layout_width="@dimen/x75"
                android:layout_height="match_parent"
                android:background="@drawable/ra_light_white_btn"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:background="@drawable/icon_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img3"
                    android:layout_marginTop="@dimen/x4"
                    android:text="QQ"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/x12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_qq_space"
                android:layout_width="@dimen/x75"
                android:layout_height="match_parent"
                android:background="@drawable/ra_light_white_btn"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:background="@drawable/icon_qq_space" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img2"
                    android:layout_marginTop="@dimen/x4"
                    android:text="QQ空间"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/x12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_weibo"
                android:layout_width="@dimen/x75"
                android:layout_height="match_parent"
                android:background="@drawable/ra_light_white_btn"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:background="@drawable/icon_weibo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img6"
                    android:layout_marginTop="@dimen/x4"
                    android:text="微博"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/x12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tencent_weibo"
                android:layout_width="@dimen/x75"
                android:layout_height="match_parent"
                android:background="@drawable/ra_light_white_btn"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:background="@drawable/icon_tencent_weibo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img7"
                    android:layout_marginTop="@dimen/x4"
                    android:text="腾讯微博"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/x12" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_below="@+id/hs"
        android:layout_height="@dimen/x1"/>

    <LinearLayout
        android:id="@+id/ll_copy_link"
        android:layout_width="@dimen/x75"
        android:layout_height="@dimen/x102"
        android:layout_below="@+id/v1"
        android:background="@drawable/ra_light_white_btn"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img9"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/x35"
            android:background="@drawable/icon_copy_link" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img9"
            android:layout_marginTop="@dimen/x4"
            android:text="复制链接"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/x12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_report"
        android:layout_below="@id/v1"
        android:layout_toRightOf="@+id/ll_copy_link"
        android:layout_width="@dimen/x75"
        android:layout_height="@dimen/x102"
        android:background="@drawable/ra_light_white_btn"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img10"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/x35"
            android:background="@drawable/icon_report" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img10"
            android:layout_marginTop="@dimen/x4"
            android:text="举报"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/x12" />

    </LinearLayout>

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_below="@+id/ll_copy_link"
        android:layout_height="@dimen/x5"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x36"
        android:layout_below="@+id/v2"
        android:background="@drawable/ra_light_white_btn"
        android:text="取消"
        android:gravity="center" />

</RelativeLayout>