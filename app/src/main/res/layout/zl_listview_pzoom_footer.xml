<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/zoomlistview_footer_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <LinearLayout
            android:id="@id/id_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <com.sdk.views.refresh.GifView
                android:id="@+id/pb_load_more"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:visibility="visible"
                app:gif="@raw/zl_loading" />

            <!--<ProgressBar-->
                <!--android:id="@+id/pb_load_more"-->
                <!--style="?android:attr/progressBarStyleSmall"-->
                <!--android:layout_width="@dimen/x18"-->
                <!--android:layout_height="@dimen/x18"-->
                <!--android:indeterminateDrawable="@drawable/util_loading_progress_60"-->
                <!--android:visibility="visible" />-->

            <TextView
                android:id="@+id/tv_footer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x2"
                android:gravity="center"
                android:text="@string/prompt_up_to_load"
                android:textColor="#666666"
                android:textSize="@dimen/x14" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>